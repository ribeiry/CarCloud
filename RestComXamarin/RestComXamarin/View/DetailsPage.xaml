<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestComXamarin.View.DetailsPage">
    <ScrollView Padding="10">
        <StackLayout Spacing="10">
            <Image Source="{Binding Image}" HeightRequest="200" WidthRequest="200"/>
            <Label Text="{Binding Fabricante}" FontSize="24"/>
            <Label Text="{Binding Preco,StringFormat='{0:c}dólares'}" TextColor="Red"/>
            <Label Text="{Binding Modelo}"/>
            <Button Text="Ir ao Site" x:Name="ButtonWebSite"/>
            <Button Text="Favorito" x:Name="ButtonFavorito"/>
        </StackLayout>
    </ScrollView>
</ContentPage>